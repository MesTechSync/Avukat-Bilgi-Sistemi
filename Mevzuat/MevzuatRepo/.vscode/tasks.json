{
  "$schema": "https://json.schemastore.org/tasks.json",
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Mevzuat MCP",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}\\start-mcp.ps1"
      ],
      "problemMatcher": []
    },
    {
      "label": "Smoke Test",
      "type": "shell",
      "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
      "args": [
        "${workspaceFolder}\\smoke_test.py"
      ],
      "problemMatcher": []
    }
  ]
}

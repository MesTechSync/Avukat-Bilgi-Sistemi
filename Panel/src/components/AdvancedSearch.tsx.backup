  } | null>(null);

  // Sesli Komut State'leri
  const [voiceCommandHistory, setVoiceCommandHistory] = useState<Array<{
    command: string;
    time: string;
    status: 'success' | 'error';
    result: string;
  }>>([]);

  // Yapay Zeka State'leri
  const [aiAnalysis, setAiAnalysis] = useState<string>('');
  const [isAnalyzing, setIsAnalyzing] = useState(false);
  const [showAiAnalysis, setShowAiAnalysis] = useState(false);

  // Veri √áekme State'leri
  const [scrapingKeyword, setScrapingKeyword] = useState('');
  const [scrapingSystem, setScrapingSystem] = useState<'yargitay' | 'uyap' | 'mevzuat'>('yargitay');
  const [scrapingLimit, setScrapingLimit] = useState(10); // 10 sayfa = 100 adet
  const [isScraping, setIsScraping] = useState(false);
  const [scrapingResults, setScrapingResults] = useState<any>(null);
  const [selectedDecision, setSelectedDecision] = useState<any>(null);
  const [showDecisionModal, setShowDecisionModal] = useState(false);
  const [currentPage, setCurrentPage] = useState(1);
  const [pageSize, setPageSize] = useState(10);
  const [allResults, setAllResults] = useState<any[]>([]);

  // Ger√ßek Veri √áekme State'leri (Selenium Entegrasyonu)
  const [realScrapingStatus, setRealScrapingStatus] = useState<any>(null);
  const [realScrapingLogs, setRealScrapingLogs] = useState<string[]>([]);
  const [realScrapingProgress, setRealScrapingProgress] = useState(0);
  const [showRealScrapingLogs, setShowRealScrapingLogs] = useState(true);

  // Akƒ±llƒ± Arama √ñzellikleri
  const searchSuggestionsData = {
    'i≈ü': ['i≈ü s√∂zle≈ümesi', 'i≈ü s√∂zle≈ümesi feshi', 'i≈ü hukuku', 'i≈ü√ßi haklarƒ±', 'i≈üveren y√ºk√ºml√ºl√ºkleri'],
    'velayet': ['velayet deƒüi≈üikliƒüi', 'velayet ≈üartlarƒ±', 'velayet hakkƒ±', 'velayet davasƒ±', 'velayet tazminatƒ±'],
    'bor√ß': ['bor√ß s√∂zle≈ümesi', 'bor√ß √∂deme', 'bor√ß faizi', 'bor√ß taksitlendirme', 'bor√ß silme'],
    'ceza': ['ceza hukuku', 'ceza davasƒ±', 'ceza tazminatƒ±', 'ceza indirimi', 'ceza erteleme'],
    'ticaret': ['ticaret hukuku', 'ticaret s√∂zle≈ümesi', 'ticaret davasƒ±', 'ticaret sicili', 'ticaret ≈üirketi'],
    'aile': ['aile hukuku', 'aile davasƒ±', 'aile mahkemesi', 'aile danƒ±≈ümanlƒ±ƒüƒ±', 'aile korumasƒ±'],
    's√∂zle≈üme': ['s√∂zle≈üme hukuku', 's√∂zle≈üme feshi', 's√∂zle≈üme ihlali', 's√∂zle≈üme tazminatƒ±', 's√∂zle≈üme ge√ßersizliƒüi'],
    'tazminat': ['tazminat davasƒ±', 'tazminat hesaplama', 'tazminat t√ºrleri', 'tazminat miktarƒ±', 'tazminat √∂deme'],
    'nafaka': ['nafaka davasƒ±', 'nafaka miktarƒ±', 'nafaka artƒ±rƒ±mƒ±', 'nafaka azaltƒ±mƒ±', 'nafaka √∂deme'],
    'bo≈üanma': ['bo≈üanma davasƒ±', 'bo≈üanma s√ºreci', 'bo≈üanma ≈üartlarƒ±', 'bo≈üanma tazminatƒ±', 'bo≈üanma anla≈ümasƒ±']
  };

  // Akƒ±llƒ± arama √∂nerileri
  const getSearchSuggestions = useCallback((input: string) => {
    if (input.length < 2) return [];
    
    const suggestions: string[] = [];
    const inputLower = input.toLowerCase();
    
    // Doƒürudan e≈üle≈üme
    Object.entries(searchSuggestionsData).forEach(([key, values]) => {
      if (key.includes(inputLower)) {
        suggestions.push(...values);
      }
      values.forEach(value => {
        if (value.includes(inputLower) && !suggestions.includes(value)) {
          suggestions.push(value);
        }
      });
    });
    
    return suggestions.slice(0, 5);
  }, []);

  // Arama fonksiyonu
  const handleSearch = useCallback(async (searchQuery?: string) => {
    const searchTerm = searchQuery || query;
    if (!searchTerm.trim()) return;
    
    setIsLoading(true);
    try {
      let results: SearchResult[] = [];
      
      if (searchType === 'ictihat') {
        const ictihatResults = await searchIctihat(searchTerm, {
          courtType: selectedCourt as any,
          dateRange: dateRange ? { from: dateRange, to: dateRange } : undefined,
          legalArea: ''
        });
        results = ictihatResults.map(result => ({
          id: result.id,
          caseNumber: result.caseNumber || '',
          courtName: result.courtName || '',
          courtType: result.courtType || '',
          decisionDate: result.decisionDate || '',
          subject: result.subject || '',
          content: result.content || '',
          relevanceScore: result.relevanceScore || 0,
          legalAreas: result.legalAreas || [],
          keywords: result.keywords || [],
          highlight: result.highlight || ''
        }));
      } else if (searchType === 'mevzuat') {
        const mevzuatResults = await searchMevzuat(searchTerm, {
          category: '',
          dateRange: dateRange ? { from: dateRange, to: dateRange } : undefined
        });
        results = mevzuatResults.map(result => ({
          id: result.id,
          caseNumber: result.title || '',
          courtName: result.institution || '',
          courtType: 'mevzuat',
          decisionDate: result.publishDate || '',
          subject: result.title || '',
          content: result.content || '',
          relevanceScore: result.relevanceScore || 0,
          legalAreas: [result.category || ''],
          keywords: [searchTerm],
          highlight: result.highlight || ''
        }));
      }
      
      setSearchResults(results);
      
      // Yapay zeka analizi ge√ßici olarak devre dƒ±≈üƒ±
      // if (results.length > 0) {
      //   analyzeWithAI(results, searchTerm);
      // }
      
      // Arama ge√ßmi≈üine ekle
      setSearchHistory(prev => [{
        query: searchTerm,
        type: searchType,
        date: new Date().toLocaleDateString('tr-TR'),
        results: results.length
      }, ...prev.slice(0, 9)]);
      
    } catch (error) {
      console.error('Arama hatasƒ±:', error);
    } finally {
      setIsLoading(false);
    }
  }, [query, searchType, selectedCourt, dateRange]);

  // Ger√ßek Veri √áekme Fonksiyonlarƒ± (Selenium Entegrasyonu)
  const startRealScraping = useCallback(async () => {
    if (!scrapingKeyword.trim()) {
      alert('L√ºtfen anahtar kelime girin!');
      return;
    }

    setIsScraping(true);
    setRealScrapingLogs([`[${new Date().toLocaleTimeString()}] Ger√ßek veri √ßekme ba≈ülatƒ±ldƒ±`]);

    try {
      const response = await fetch('/api/data-scraping/real-start', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          keyword: scrapingKeyword,
          system: scrapingSystem,
          limit: scrapingLimit,
          headless: true
        })
      });

      const data = await response.json();
      if (data.success) {
        setRealScrapingStatus(data);
        // Status takibi ba≈ülat
        const statusInterval = setInterval(async () => {
          try {
            const statusResponse = await fetch('/api/data-scraping/real-status');
            const statusData = await statusResponse.json();
            setRealScrapingStatus(statusData);
            setRealScrapingProgress(statusData.progress || 0);

            if (statusData.logs) {
              setRealScrapingLogs(statusData.logs);
            }
            setAllResults(statusData.results || []);

            if (!statusData.is_running) {
              clearInterval(statusInterval);
              setIsScraping(false);
            }
          } catch (error) {
            console.error('Status g√ºncelleme hatasƒ±:', error);
          }
        }, 2000);
      } else {
        alert('Hata: ' + data.message);
        setIsScraping(false);
      }
    } catch (error) {
      console.error('Veri √ßekme ba≈ülatma hatasƒ±:', error);
      alert('Veri √ßekme ba≈ülatƒ±lamadƒ±!');
      setIsScraping(false);
    }
  }, [scrapingKeyword, scrapingSystem, scrapingLimit]);

  const stopRealScraping = useCallback(async () => {
    try {
      await fetch('/api/data-scraping/real-stop', { method: 'POST' });
      setIsScraping(false);
      setRealScrapingLogs(prev => [...prev, `[${new Date().toLocaleTimeString()}] Veri √ßekme durduruldu`]);
    } catch (error) {
      console.error('Veri √ßekme durdurma hatasƒ±:', error);
    }
  }, []);

  const downloadExcelFile = useCallback(async () => {
    if (!realScrapingStatus?.file_path) {
      alert('ƒ∞ndirilecek dosya bulunamadƒ±');
      return;
    }

    try {
      const response = await fetch(`/api/data-scraping/download/${realScrapingStatus.file_path}`);
      if (!response.ok) {
        throw new Error('Dosya indirilemedi');
      }
      
      const blob = await response.blob();
      const url = window.URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.style.display = 'none';
      a.href = url;
      a.download = realScrapingStatus.file_path;
      document.body.appendChild(a);
      a.click();
      window.URL.revokeObjectURL(url);
      document.body.removeChild(a);
    } catch (error) {
      console.error('Excel indirme hatasƒ±:', error);
      alert('Excel dosyasƒ± indirilemedi: ' + (error as Error).message);
    }
  }, [realScrapingStatus]);

  // Sesli arama ba≈ülatma
  const startVoiceSearch = useCallback(() => {
    setIsVoiceListening(true);
    setVoiceStatus('listening');
    setRecognizedText('');
        startDictation();
  }, [startDictation]);

  // Sesli arama durdurma
  const stopVoiceSearch = useCallback(() => {
    setIsVoiceListening(false);
    setVoiceStatus('processing');
        stopDictation();
  }, [stopDictation]);

  // Duygu analizi
  const analyzeEmotion = useCallback(async () => {
    if (!emotionText.trim()) return;
    
    setIsAnalyzingEmotion(true);
    try {
      // Sim√ºle edilmi≈ü duygu analizi
      await new Promise<void>(resolve => setTimeout(resolve, 2000));
      
      const emotions = [
        { emotion: 'Mutluluk', score: Math.random() * 0.8 + 0.2 },
        { emotion: '√úz√ºnt√º', score: Math.random() * 0.6 + 0.1 },
        { emotion: '√ñfke', score: Math.random() * 0.4 + 0.1 },
        { emotion: 'Korku', score: Math.random() * 0.3 + 0.1 },
        { emotion: '≈ûa≈ükƒ±nlƒ±k', score: Math.random() * 0.5 + 0.1 }
      ];
      
      const sentiment = emotions[0].score > 0.5 ? 'positive' : emotions[1].score > 0.5 ? 'negative' : 'neutral';
      const confidence = Math.max(...emotions.map(e => e.score));
      
      setEmotionResults({
        emotions: emotions.sort((a, b) => b.score - a.score),
        sentiment,
        confidence,
        insights: 'Bu metin genel olarak n√∂tr bir duygusal ton ta≈üƒ±maktadƒ±r. Hukuki terminoloji kullanƒ±mƒ± profesyonel bir yakla≈üƒ±m sergilemektedir.'
      });
    } catch (error) {
      console.error('Duygu analizi hatasƒ±:', error);
    } finally {
      setIsAnalyzingEmotion(false);
    }
  }, [emotionText]);

  // Yapay zeka analizi
  const analyzeWithAI = useCallback(async (searchResults: SearchResult[], query: string) => {
    if (searchResults.length === 0) return;
    
    setIsAnalyzing(true);
    try {
      const resultsText = searchResults.map(result => 
        `${result.courtName} - ${result.subject}\n${result.content.substring(0, 500)}...`
      ).join('\n\n');

      const analysis = await geminiService.analyzeText(
        `A≈üaƒüƒ±daki hukuki arama sonu√ßlarƒ±nƒ± analiz et ve "${query}" konusunda kapsamlƒ± bir deƒüerlendirme yap. Sonu√ßlarƒ± kategorize et, √∂nemli noktalarƒ± vurgula ve pratik √∂neriler sun.`,
        `Arama Terimi: ${query}\n\nSonu√ßlar:\n${resultsText}`
      );
      
      setAiAnalysis(analysis);
      setShowAiAnalysis(true);
    } catch (error) {
      console.error('AI analizi hatasƒ±:', error);
      setAiAnalysis('AI analizi yapƒ±lamadƒ±. L√ºtfen tekrar deneyin.');
    } finally {
      setIsAnalyzing(false);
    }
  }, []);

  // Streaming veri √ßekme fonksiyonlarƒ±
  const startDataScraping = useCallback(async () => {
    if (!scrapingKeyword.trim()) return;

    // Eƒüer zaten √ßekiliyorsa, mevcut sonu√ßlarƒ± g√∂ster
    if (isScraping) {
      try {
        const statusResponse = await fetch('http://localhost:9000/api/data-scraping/streaming-status');
        const status = await statusResponse.json();
        
        if (status.results && status.results.length > 0) {
          setAllResults(status.results);
          setCurrentPage(1);
          
          setScrapingResults({
            success: true,
            message: `üìä Mevcut sonu√ßlar - ${status.total_results} sonu√ß`,
            total_results: status.total_results,
            results_preview: status.results
          });
        }
        return;
      } catch (error) {
        console.error('Mevcut sonu√ßlarƒ± alma hatasƒ±:', error);
      }
    }

    setAllResults([]); // Sonu√ßlarƒ± temizle
    
    try {
      // 1. Streaming ba≈ülat
      const response = await fetch('http://localhost:9000/api/data-scraping/start', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          keyword: scrapingKeyword,
          system: scrapingSystem,
          limit: scrapingLimit,
          save_format: 'none',
          headless: true
        })
      });

      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }

      const result = await response.json();
      setScrapingResults(result);
      
      // Streaming ba≈üladƒ±, isScraping'i true yap
      setIsScraping(true);
      
      // 2. Streaming durumunu takip et
      const pollInterval = setInterval(async () => {
        try {
          console.log('üîÑ Polling √ßalƒ±≈üƒ±yor...');
          const statusResponse = await fetch('http://localhost:9000/api/data-scraping/streaming-status');
          const status = await statusResponse.json();
          
          console.log('üìä Streaming status:', status);
          console.log('üìä is_running:', status.is_running);
          console.log('üìä results length:', status.results ? status.results.length : 0);
          
          // Sonu√ßlarƒ± g√ºncelle
          if (status.results && status.results.length > 0) {
            console.log('‚úÖ Sonu√ßlar bulundu:', status.results.length);
            setAllResults(status.results);
            setCurrentPage(1);
            
            // ƒ∞lerleme g√ºncelle
            setScrapingResults(prev => ({
              ...prev,
              message: `‚ö° ${status.status} - ${status.total_results} sonu√ß`,
              total_results: status.total_results,
              results_preview: status.results
            }));
          }
          
          // ƒ∞≈ülem tamamlandƒ± mƒ±?
          if (!status.is_running) {
            console.log('üèÅ ƒ∞≈ülem tamamlandƒ±');
            clearInterval(pollInterval);
            setIsScraping(false);
            
            setScrapingResults(prev => ({
              ...prev,
              message: `‚úÖ Tamamlandƒ± - ${status.total_results} sonu√ß √ßekildi`,
              success: true
            }));
          }
          
        } catch (error) {
          console.error('Streaming status hatasƒ±:', error);
        }
      }, 1000); // Her 1 saniyede bir kontrol et
      
      // 30 saniye sonra polling'i durdur (g√ºvenlik)
      setTimeout(() => {
        clearInterval(pollInterval);
        if (isScraping) {
          setIsScraping(false);
        }
      }, 30000);

    } catch (error) {
      console.error('Veri √ßekme hatasƒ±:', error);
      setScrapingResults({
        success: false,
        message: `Veri √ßekme ba≈üarƒ±sƒ±z: ${error}`,
        total_results: 0
      });
      setIsScraping(false);
    }
  }, [scrapingKeyword, scrapingSystem, scrapingLimit, isScraping]);

  // Karar detayƒ±nƒ± g√∂ster
  const showDecisionDetail = useCallback((decision: any) => {
    setSelectedDecision(decision);
    setShowDecisionModal(true);
  }, []);

  // Modal'ƒ± kapat
  const closeDecisionModal = useCallback(() => {
    setShowDecisionModal(false);
    setSelectedDecision(null);
  }, []);

  // Veri √ßekme i≈ülemini durdur
  const stopDataScraping = useCallback(async () => {
    try {
      const response = await fetch('http://localhost:9000/api/data-scraping/stop', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        }
      });

      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }

      const result = await response.json();
      setIsScraping(false);
      
      setScrapingResults({
        success: true,
        message: `‚èπÔ∏è ${result.message}`,
        total_results: result.total_results,
        results_preview: result.results
      });

      if (result.results && result.results.length > 0) {
        setAllResults(result.results);
        setCurrentPage(1);
      }

    } catch (error) {
      console.error('Veri √ßekme durdurma hatasƒ±:', error);
      setScrapingResults({
        success: false,
        message: `Veri √ßekme durdurulamadƒ±: ${error}`,
        total_results: 0
      });
    }
  }, []);


  // Sesli arama sonucu i≈üleme
  useEffect(() => {
    if (interimText && interimText.trim()) {
      setRecognizedText(interimText);
      setQuery(interimText);
      setVoiceStatus('success');
      
      // Otomatik arama yap
      const timer = setTimeout(() => {
        handleSearch(interimText);
      }, 1000);
      
      return () => clearTimeout(timer);
    }
  }, [interimText, handleSearch]);

  // Sesli arama hatasƒ± i≈üleme
  useEffect(() => {
    if (dictationError) {
      setVoiceStatus('error');
      setIsVoiceListening(false);
    }
  }, [dictationError]);

  // Zaman √ßizelgesi verilerini y√ºkle
  useEffect(() => {
    const timelineData = [
      {
        date: '2024-01-15',
        title: 'Yeni ƒ∞≈ü Kanunu Deƒüi≈üiklikleri',
        description: 'ƒ∞≈ü Kanunu\'nda √∂nemli deƒüi≈üiklikler yapƒ±ldƒ±',
        type: 'law' as const,
        importance: 'high' as const
      },
      {
        date: '2024-02-20',
        title: 'Yargƒ±tay Bo≈üanma Kararƒ±',
        description: 'Yargƒ±tay\'dan √∂nemli bo≈üanma kararƒ±',
        type: 'court' as const,
        importance: 'medium' as const
      },
      {
        date: '2024-03-10',
        title: 'Mevzuat G√ºncellemesi',
        description: 'Mevzuat sisteminde g√ºncellemeler',
        type: 'legislation' as const,
        importance: 'low' as const
      }
    ];
    setTimelineData(timelineData);
  }, []);


  // Input deƒüi≈üikliklerinde √∂nerileri g√ºncelle
  useEffect(() => {
    if (query.length >= 2) {
      const suggestions = getSearchSuggestions(query);
      setSearchSuggestions(suggestions);
      setShowSuggestions(suggestions.length > 0);
    } else {
      setShowSuggestions(false);
    }
  }, [query, getSearchSuggestions]);

  return (
    <div className={`min-h-screen p-4 md:p-6 transition-all duration-500 ${
      isDarkMode 
        ? 'bg-gradient-to-br from-slate-900 via-gray-900 to-black' 
        : 'bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100'
    }`}>
      {/* Header - Sadece ba≈ülƒ±k */}
